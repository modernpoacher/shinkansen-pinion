{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "#pinion": [
        "src/index.mjs"
      ],
      "#pinion/common": [
        "src/common/index.mjs"
      ],
      "#pinion/components": [
        "src/components/index.mjs"
      ],
      "#pinion/components/*": [
        "src/components/*/index.mjs"
      ],
      "#pinion/pinion": [
        "src/pinion/index.jsx"
      ],
      "#pinion/pinion/*": [
        "src/pinion/*/index.jsx"
      ],
      "#pinion/transformers": [
        "src/transformers/index.mjs"
      ],
      "#pinion/transformers/*": [
        "src/transformers/*/index.mjs"
      ],
      "#pinion/transformers/check-answers/*": [
        "src/transformers/check-answers/*.mjs"
      ],
      "#pinion/transformers/common/*": [
        "src/transformers/common/*.mjs"
      ],
      "#pinion/transformers/error-message/*": [
        "src/transformers/error-message/*.mjs"
      ],
      "#stories/components/*": [
        "stories/components/*/index.stories.jsx"
      ],
      "#stories/definitions/*": [
        "stories/definitions/*.json"
      ],
      "#stories/errors": [
        "stories/errors.mjs"
      ],
      "#stories/pinion/*": [
        "stories/pinion/*/index.stories.jsx"
      ],
      "#stories/state": [
        "stories/state/index.jsx"
      ],
      "#stories/state/*": [
        "stories/state/*/index.jsx"
      ]
    }
  },
  "include": [
    "node_modules/shinkansen-cogs/src/**/*",
    "node_modules/shinkansen-rails/src/**/*",
    "node_modules/shinkansen-signals/src/**/*",
    "node_modules/shinkansen-sprockets/src/**/*",
    "src/**/*"
  ]
}
