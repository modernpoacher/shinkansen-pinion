{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "jsx": "react",
    "resolveJsonModule": true
  },
  "include": [
    ".",
    "node_modules/shinkansen-cogs/src/**/*",
    "node_modules/shinkansen-rails/src/**/*",
    "node_modules/shinkansen-signals/src/**/*",
    "node_modules/shinkansen-sprockets/src/**/*",
    "src/**/*",
    "stories/**/*"
  ],
  "exclude": [
    "**/__tests__/**/*"
  ]
}
