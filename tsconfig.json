{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "#pinion": [
        "src/index.cjs",
        "src/index.mjs"
      ],
      "#pinion/common": [
        "src/common/index.mjs"
      ],
      "#pinion/common/elements": [
        "src/common/elements/index.mjs"
      ],
      "#pinion/common/elements/*": [
        "src/common/elements/*.mjs"
      ],
      "#pinion/common/meta": [
        "src/common/meta/index.mjs"
      ],
      "#pinion/common/meta/*": [
        "src/common/meta/*.mjs"
      ],
      "#pinion/components": [
        "src/components/index.cjs",
        "src/components/index.mjs"
      ],
      "#pinion/components/cogs": [
        "src/components/cogs/index.cjs",
        "src/components/cogs/index.mjs"
      ],
      "#pinion/components/cogs/*": [
        "src/components/cogs/*/index.cjs",
        "src/components/cogs/*/index.mjs"
      ],
      "#pinion/components/sprockets": [
        "src/components/sprockets/index.cjs",
        "src/components/sprockets/index.mjs"
      ],
      "#pinion/components/sprockets/*": [
        "src/components/sprockets/*/index.cjs",
        "src/components/sprockets/*/index.mjs"
      ],
      "#pinion/pinion": [
        "src/pinion/index.cjs"
      ],
      "#pinion/transformers": [
        "src/transformers/index.mjs"
      ],
      "#pinion/transformers/check-answers": [
        "src/transformers/check-answers/index.mjs"
      ],
      "#pinion/transformers/check-answers/*": [
        "src/transformers/check-answers/*.mjs"
      ],
      "#pinion/transformers/common": [
        "src/transformers/common/index.mjs"
      ],
      "#pinion/transformers/common/*": [
        "src/transformers/common/*.mjs"
      ],
      "#pinion/transformers/error-message": [
        "src/transformers/error-message/index.mjs"
      ],
      "#pinion/transformers/error-message/*": [
        "src/transformers/error-message/*.mjs"
      ]
    }
  },
  "include": [
    ".",
    "node_modules/shinkansen-cogs/src/**/*",
    "node_modules/shinkansen-rails/src/**/*",
    "node_modules/shinkansen-signals/src/**/*",
    "node_modules/shinkansen-sprockets/src/**/*"
  ],
  "exclude": [
    "**/__tests__/**/*"
  ]
}
